<section class="quote-section">
    <div id="map"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-5 col-sm-offset-7">
                <div class="quote-box">
                    <h1>Demande de devis gratuit</h1>
                    <div id="msg" class="message ask-quote" >Demande de devis envoyée</div>
                    {{ form_errors(form) }}
                    {{ form_start(form, {'attr':{'id':'contact-form', 'data-route': path('add_devis_ajax')}}) }}
                        {{ form_widget(form.nomSociete, {'attr': {'placeholder': 'Nom de la société', 'id': 'name'}}) }}
                        {{ form_widget(form.email,{'attr':{'placeholder': 'E-mail'}}) }}
                        {{ form_widget(form.telephone, {'attr':{'placeholder': 'Téléphone'}}) }}
                        {{ form_widget(form.message, {'attr':{'placeholder': 'Message'}}) }}
                        {{ form_widget(form.document, {'attr':{'class': 'default ajax_file'}}) }}<br>
                        <input type="submit" id="submit_contact" value="Envoyer">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>